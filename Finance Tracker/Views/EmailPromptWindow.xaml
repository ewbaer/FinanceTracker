<Window x:Class="FinanceTracker.Views.EmailPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Send Email" Height="180" Width="300"
        Background="#1e1e1e" Foreground="White"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20">
        <TextBlock Text="Enter recipient email:" FontSize="14" Margin="0,0,0,10"/>
        <TextBox x:Name="EmailBox" Height="25" Margin="0,0,0,10"/>
        <Button Content="Send Email" Click="SendEmail_Click" />
    </StackPanel>
</Window>
